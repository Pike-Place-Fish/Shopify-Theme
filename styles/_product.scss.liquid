//==============================================================================================
// PRODUCT
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify product detail.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-product {

    // Product Details
    .product-single {

      h1[itemprop="name"] {
        font-size               : em(28px);
      }

      .product-description {
        p {
          margin-bottom         : $gutter;
        }
      }

      // InifiteOptions and product form
      select,
      input[type="number"],
      button[type="submit"] {
        width                   : 100%;
      }
      div.product-custom-options {
        margin                  : ($gutter * 2) 0;
      }
      .product-custom-options > div,
      div.selector-wrapper,
      div.option-container,
      div.unit-price {
        display                 : table;
        margin-bottom           : $gutter;
        width                   : 100%;
        label,
        label ~ span,
        > span.price-label,
        span ~ span {
          display               : table-cell;
          vertical-align        : top;
        }
        label,
        span.price-label {
          padding-top           : 0.5em;
          padding-right         : ($gutter * 1.5);
          width                 : 30%;
          text-align            : right;
        }
        label ~ span,
        span[itemprop="price"] {
          width                 : 70%;
        }
      }
      span[itemprop="price"] {
        font-size               : em(24.5px);
      }

      // Related articles
      .related-recipes {
        margin-top              : ($gutter * 2);
        ul {
          list-style            : none;
          margin-left           : ($gutter / 5);
          li {
            a {
              font-family       : 'Cabin Semibold', $bodyFontStack;
              color             : {{ settings.color_interface_accent }};
            }
          }
        }
      }

    }

  }

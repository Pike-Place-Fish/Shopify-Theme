//==============================================================================================
// PRODUCT
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify product detail.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-product {

    // Product Details
    .product-single {

      // Images
      .product-single__photos,
      .product-single__thumbnails {
        @include at-query ($min, $large) {
          padding-right         : ($gutter * 3);
        }
      }
      .product-single__photos {
        @include at-query ($min, $large) {
          img {
            margin-left           : 0;
            margin-right          : 0;
            width                 : 100%;
          }
        }
      }

      // Text
      h1[itemprop="name"] {
        margin                  : 0;
        font-size               : em(18px);
        text-transform          : none;
      }
      .product-description {
        p {
          margin-bottom         : $gutter;
        }
      }

      // Cutting instructions example
      table.cutting-instructions {
        td {
          border                : 0 none transparent;
          padding               : ($gutter * 1.5) ($gutter * 1.5) 0;
          vertical-align        : middle;
          background-color      : {{ settings.color_body_bg }};
          &.label {
            padding-bottom      : ($gutter * 1.5);
            text-align          : center;
            font-family         : $headerFontStack;
            font-size           : $baseFontSize;
            font-weight         : $headerFontWeight;
            text-transform      : uppercase;
          }
          p {
            margin              : 0;
          }
          img {
            max-width           : 100%;
          }
        }
      }

      // InifiteOptions and product form
      select,
      input[type="number"] {
        width                   : 100%;
      }
      div.product-custom-options {
        margin                  : $gutter 0 ($gutter * 2);
      }
      .product-custom-options > div,
      div.selector-wrapper,
      div.option-container,
      div.unit-price {
        display                 : table;
        margin-bottom           : $gutter;
        width                   : 100%;
        label,
        label ~ span,
        > span.price-label,
        span ~ span {
          display               : table-cell;
          vertical-align        : top;
        }
        label,
        span.price-label {
          padding-top           : 0.25em;
          padding-right         : ($gutter * 1.5);
          width                 : 25%;
        //text-align            : right;
          font-family           : $interfaceFontStack;
          line-height           : 115%;
          font-weight           : 700;
          @include at-query($max, $preSmall) {
            font-size           : 3.25vw;
          }
        }
        label ~ span {
          width                 : 75%;
        }
      }
      .unit-price h2,
      .full-price.h6,
      span[itemprop="price"] {
        margin-top              : 0;
        font-family             : $interfaceFontStack;
        font-size               : em(18px);
        font-weight             : 700;
      }
      .full-price {
        display                 : block;
        margin-bottom           : $gutter;
      }
      .full-price.h6,
      .full-price span.h6 {
        font-size               : $baseFontSize;
        font-weight             : 600;
      }
      .full-price span.h6 {
        display                 : inline-block;
      }

      // Related articles
      .related-recipes {
        margin-top              : ($gutter * 2);
        ul {
          list-style            : none;
          margin-left           : ($gutter / 5);
          li {
            a {
              font-family       : 'Cabin Semibold', $bodyFontStack;
              color             : $colorLink;
            }
          }
        }
      }

    }

  }

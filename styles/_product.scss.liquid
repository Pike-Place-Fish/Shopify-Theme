//==============================================================================================
// PRODUCT
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify product detail.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-product {

    // Product Details
    .product-single {

      // Images
      .product-single__photos,
      .product-single__thumbnails {
        @include at-query ($min, $large) {
          padding-right         : ($gutter * 3);
        }
      }
      .product-single__photos {
        @include at-query ($min, $large) {
          img {
            margin-left           : 0;
            margin-right          : 0;
            width                 : 100%;
          }
        }
      }

      // Text
      h1[itemprop="name"] {
        font-size               : em(28px);
      }
      .product-description {
        p {
          margin-bottom         : $gutter;
        }
      }

      // Cutting instructions example
      table.cutting-instructions {
        td {
          border                : 0 none transparent;
          padding               : ($gutter * 1.5) ($gutter * 1.5) 0;
          vertical-align        : middle;
          background-color      : {{ settings.color_body_bg }};
          &.label {
            padding-bottom      : ($gutter * 1.5);
            text-align          : center;
            font-family         : $headerFontStack;
            font-size           : $baseFontSize;
            text-transform      : uppercase;
          }
          p {
            margin              : 0;
          }
          img {
            max-width           : 100%;
          }
        }
      }

      // InifiteOptions and product form
      select,
      input[type="number"] {
        width                   : 100%;
      }
      div.product-custom-options {
        margin                  : ($gutter * 2) 0;
      }
      .product-custom-options > div,
      div.selector-wrapper,
      div.option-container,
      div.unit-price {
        display                 : table;
        margin-bottom           : $gutter;
        width                   : 100%;
        label,
        label ~ span,
        > span.price-label,
        span ~ span {
          display               : table-cell;
          vertical-align        : top;
        }
        label,
        span.price-label {
          padding-top           : 0.5em;
          padding-right         : ($gutter * 1.5);
          width                 : 25%;
        //text-align            : right;
          font-family           : 'Cabin Bold', $bodyFontStack;
        }
        label ~ span,
        span[itemprop="price"] {
          width                 : 75%;
        }
      }
      span[itemprop="price"] {
        font-size               : em(24.5px);
      }

      // Related articles
      .related-recipes {
        margin-top              : ($gutter * 2);
        ul {
          list-style            : none;
          margin-left           : ($gutter / 5);
          li {
            a {
              font-family       : 'Cabin Semibold', $bodyFontStack;
              color             : {{ settings.color_interface_accent }};
            }
          }
        }
      }

    }

  }

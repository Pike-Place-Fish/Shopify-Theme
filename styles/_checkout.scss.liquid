//==============================================================================================
// CHECKOUT
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify checkout process.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-checkout {

    // Order Summary
    div.sidebar {
      padding                   : 2.5%;
    }
    .order-summary-toggle {
      border                    : 0 none transparent;
      border-radius             : 0;
      background-color          : {{ settings.color_body_bg_accent }};
      .order-summary-toggle__text,
      .order-summary-toggle__total-recap {
        font-family             : $interfaceFontStack;
      }
    }
    .order-summary {
      table {
        th,
        td {
          border                : 0 none transparent;
        }
      }
      .product__price {
        font-family             : $interfaceFontStack;
      }
      .total-line-table {
        td {
          font-family           : $interfaceFontStack;
        }
      }
    }

    .logged-in-customer-information__avatar {
      border-radius             : 0;
    }

    .product__description__name {
      font-family               : $headerFontStack;
      font-size                 : $baseFontSize;
      line-height               : 115%;
      font-weight               : $headerFontWeight;
    }
    .product-thumbnail,
    .product-thumbnail__wrapper {
      border                    : 0 none transparent;
      border-radius             : 0;
      border-image-width        : 0;
      &:after {
        border-radius           : 0;
        box-shadow              : none;
      }
    }

    // Body Content
    h2.section__title {
      @extend h3;
    }

    // Form Overrides
    .input-radio {
      width                     : 18px;
    }

  }

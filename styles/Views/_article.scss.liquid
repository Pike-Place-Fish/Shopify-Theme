//==============================================================================================
// ARTICLE
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market blog post artricle (e.g., recipe).
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-article {

    .article-body {
      @include at-query($min, $medium) {
        padding-left            : ($gutter *1.5)
      }
      @include at-query($min, $large) {
        padding-left            : ($gutter * 3)
      }

      // Servings Label (e.g., "Serves 4")
      .servings {
        margin-bottom           : 1em;
        font-family             : 'Cabin Semibold', $bodyFontStack;
      }

    }

    // Title
    h1.title {
      margin-top                : 0;
      margin-bottom             : 0.75em !important;            // Needed for overriding .section-header__left without removing markup
      text-transform            : none;
      &.h2 {
        font-size               : em(22px);
      }
    }

    // Content Headings
    h2 {
      @extend .h4;
    }

    // Related articles
    .related-products {
      margin-top                : ($gutter * 2);
      ul {
        list-style              : none;
        margin-left             : ($gutter / 5);
        li {
          display               : table;
          margin-top            : ($gutter * 1.5);
          div.image,
          div.title {
            display             : table-cell;
            vertical-align      : middle;
          }
          div.image {
            width               : 33%;
            img {
              width             : 100%;
              max-width         : 125px;
            }
          }
          div.title {
            padding             : 0 ($gutter * 1.5);
            font-family         : $interfaceFontStack;
            line-height         : 110%;
            font-weight         : 500;
            color               : {{ settings.color_body_text }};
          }
        }
      }
    }

    // Comments
    .comment-form {
      textarea {
        margin-left             : ($gutter * 2);
      }
    }

  }

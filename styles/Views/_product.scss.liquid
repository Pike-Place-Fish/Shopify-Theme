//==============================================================================================
// PRODUCT
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify product detail.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-product {

    // Defaults from Timber
    .product-single__variants {
      display                   : none;
      .no-js & {
        display                 : block;
      }
    }
    .product-single__photos {
      margin-bottom             : $gutter;
    }
    .product-single__photos,
    .product-single__thumbnails {
      a, img {
        display                 : block;
        margin                  : 0 auto;
      }
      li {
        margin-bottom           : $gutter;
      }
    }

    // Product Details
    .product-single {

      // Layout
      > .grid__item {
        padding-bottom          : ($gutter * 3);
      }

      // Images
      .product-single__photos,
      .product-single__thumbnails {
        @include at-query ($min, $large) {
          padding-right         : ($gutter * 3);
        }
      }
      .product-single__photos {
        @include at-query ($min, $large) {
          img {
            margin-left         : 0;
            margin-right        : 0;
            width               : 100%;
          }
        }
      }

      // Text
      h1[itemprop="name"] {
        margin                  : 0;
        font-size               : em(22px);
        text-transform          : none;
        @include at-query($max, $preMedium) {
          font-size             : em(18px);
        }
      }
      .product-description {
        padding-bottom          : $gutter;
        p {
          margin-bottom         : $gutter;
        }
      }
      .text-link {
        &.instructions-link {
          color                 : $colorPrimary;
        }
      }

      // InifiteOptions and product form
      select,
      input[type="number"] {
        width                   : 100%;
      }
      div.product-custom-options {
        margin                  : $gutter 0 ($gutter * 2);
        textarea {
          display               : block;
          width                 : 100%;
        }
      }
      .product-custom-options > div,
      div.selector-wrapper,
      div.option-container,
      div.unit-price {
        display                 : table;
        margin-bottom           : $gutter;
        width                   : 100%;
        label,
        label ~ span,
        > span.price-label,
        span ~ span {
          display               : table-cell;
          vertical-align        : top;
        }
        label,
        span.price-label {
          padding-top           : 0.25em;
          padding-right         : ($gutter * 3);
          width                 : 30%;
        //text-align            : right;
          font-family           : $interfaceFontStack;
          line-height           : 115%;
          font-weight           : 700;
          @include at-query($max, $preSmall) {
            font-size           : 3.25vw;
          }
          @include at-query($max, $preMedium) {
            width               : 40%;
          }
        }
        label ~ span {
          width                 : 70%;
          @include at-query($max, $preMedium) {
            width               : 60%;
          }
        }
        label[for="add"] ~ span {
          width                 : 69.75%;
          @include at-query($max, $preMedium) {
            width               : 60%;
          }
        }
      }
      .unit-price h2,
      .full-price.h6,
      span[itemprop="price"] {
        margin-top              : 0;
        font-family             : $interfaceFontStack;
        font-size               : em(18px);
        font-weight             : 700;
      }
      .unit-price .h2,
      .unit-price .unit-label {
        display                 : inline-block;
        margin-top              : 5px;
        margin-right            : 5px;
        font-size               : em(12px);
        font-weight             : 500;
        @include at-query($max, $preMedium) {
          font-size             : em(12px);
        }
      }
      .full-price {
        display                 : block;
        margin-bottom           : $gutter;
      }
      .full-price.h6,
      .full-price span.h6 {
        font-size               : $baseFontSize;
        font-weight             : 600;
      }
      .full-price span.h6 {
        display                 : inline-block;
      }
      div.spb-select {
        position                : relative;
      }
      a.info-link {
        display                 : inline-block;
        position                : absolute;
        top                     : 8px;
        border-radius           : 50%;
        padding-left            : 1px;
        width                   : 25px;
        height                  : 25px;
        font-family             : $interfaceFontStack;
        font-size               : 16px;
        line-height             : 26px;
        color                   : $colorBody;
        font-weight             : 700;
        text-align              : center;
        background              : $colorPrimary;
        @include at-query ($max, $preLarge) {
          left                  : -30px;
          padding-left          : 0;
          width                 : 20px;
          height                : 20px;
          font-size             : 14px;
          line-height           : 22px;
        }
        @include at-query ($min, $large) {
          right                 : -30px;
        }
        span.icon-info-circle {
          font-size             : 24px;
          color                 : $colorPrimary;
        }
      }

      // Related articles
      .related-recipes {
        margin-top              : ($gutter * 2);
        ul {
          list-style            : none;
          margin-left           : ($gutter / 5);
          li {
            a {
              font-family       : 'Cabin Semibold', $bodyFontStack;
              color             : $colorLink;
              &:hover,
              &:focus,
              &:active {
                color           : $colorLinkHover;
              }
            }
          }
        }
      }

    }

    // Cutting instructions modal
    .instructions.modal {
      article {
        header {
          h2 {
            margin              : 0;
            padding             : 100px 0 30px;
            text-align          : center;
            text-transform      : uppercase;
            @include at-query($max, $preSmall) {
              padding           : 75px 25px 30px;
            }
            @include at-query($max, $narrow) {
              padding           : 50px 20px 30px;
            }
          }
        }
        section {
          padding               : 0 50px;
          @include at-query($max, $preSmall) {
            padding             : 0 10px;
          }
        }
        footer {
          margin-top            : 100px;
          padding               : 35px 20%;
          background-color      : $colorAccent;
          @include at-query($max, $preSmall) {
            margin-top          : 50px;
            padding             : 30px 15%;
          }
          @include at-query($max, $narrow) {
            margin-top          : 30px;
          }
        }
      }
    }

    // Cutting instructions example
    table.cutting-instructions {
      td {
        border                  : 0 none transparent;
        padding                 : ($gutter * 1.5) ($gutter * 1.5) 0;
        vertical-align          : middle;
        background-color        : $colorBody;
        @include at-query($max, $preSmall) {
          padding               : $gutter $gutter 0;
        }
        &.label {
          padding-bottom        : ($gutter * 1.5);
          text-align            : center;
          font-family           : $headerFontStack;
          font-size             : $baseFontSize;
          font-weight           : $headerFontWeight;
          text-transform        : uppercase;
          @include at-query($max, $preSmall) {
            font-size           : em(12px);
          }
        }
        p {
          margin                : 0;
        }
        img {
          max-width             : 100%;
        }
      }
    }

  }

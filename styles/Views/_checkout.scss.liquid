//==============================================================================================
// CHECKOUT
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify checkout process.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-checkout {

    // Order Summary
    div.sidebar {
      padding                   : 2.5%;
    }
    .order-summary-toggle {
      border                    : 0 none transparent;
      border-radius             : 0;
      background-color          : $colorAccent;
      .order-summary-toggle__text,
      .order-summary-toggle__total-recap {
        font-family             : $interfaceFontStack;
      }
    }
    .order-summary {
      table {
        th,
        td {
          border                : 0 none transparent;
        }
      }
      .product__price {
        font-family             : $interfaceFontStack;
      }
      .total-line-table {
        td {
          font-family           : $interfaceFontStack;
        }
      }
    }

    .logged-in-customer-information__avatar {
      border-radius             : 0;
    }

    .product__description__name {
      font-family               : $headerFontStack;
      font-size                 : $baseFontSize;
      line-height               : 115%;
      font-weight               : $headerFontWeight;
    }
    .product-thumbnail,
    .product-thumbnail__wrapper {
      border                    : 0 none transparent;
      border-radius             : 0;
      border-image-width        : 0;
      &:after {
        border-radius           : 0;
        box-shadow              : none;
      }
    }

    // Body Content
    h2.section__title {
      @extend h3;
    }
    .message {
      &.call-message {
        margin-top              : ($gutter * 1.5);
        text-align              : left;
      }
      &.gift-card-message {
        padding-top             : 10px;
      }
    }

    // Form Overrides
    input,
    textarea,
    select {
    //border-radius             : 50%;
    }
    .input-radio,
    div.radio__input input[type="radio"] {
      border-radius             : 50%;
      width                     : 18px;
      height                    : 18px;
    }
    .input-checkbox:checked,
    .input-radio:checked {
      box-shadow                : none; // Was 0 0 0 10px $colorPrimary inset;
      &:before {
        content                 : "";
        position                : absolute;
        border-radius           : 50%;
        width                   : 18px;
        height                  : 18px;
        background-color        : $colorPrimary;
      }
    }
    .input-checkbox:checked {
      &:before {
        border-radius           : 0;
      }
      &:after {
        margin-left             : -2px;
      }
    }
    .input-checkbox:checked:focus,
    .input-radio:checked:focus {
      border-color              : $colorPrimary;
    }
    select {
      background-image          : none;
    }
    option.disabled {
      &.disabled-province {
        color                   : $colorBorder;
      }
    }

  }

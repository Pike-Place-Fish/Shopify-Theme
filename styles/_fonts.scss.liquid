//==============================================================================================
// FONTS
//----------------------------------------------------------------------------------------------
// Imports web fonts, such as EOT, WOFF, OTF, etc.
//----------------------------------------------------------------------------------------------
// NOTE: Font styles should be defined in _typography.scss.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// OPEN SANS
//----------------------------------------------------------------------------------------------
  @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800);

//----------------------------------------------------------------------------------------------
// EAGLE
//----------------------------------------------------------------------------------------------
  @font-face {
    font-family                 : 'Eagle Book';
    src                         : url('Eagle-Book.otf');
    src                         : url('Eagle-Book.otf?') format('opentype'),
      url('Eagle-Book.woff') format('woff'),
      url('Eagle-Book.woff2') format('woff2');
    font-weight                 : normal;
    font-style                  : normal;
  }
  @font-face {
    font-family                 : 'Eagle Bold';
    src                         : url('Eagle-Bold.otf');
    src                         : url('Eagle-Bold.otf?') format('opentype'),
      url('Eagle-Bold.woff') format('woff'),
      url('Eagle-Bold.woff2') format('woff2');
    font-weight                 : normal;
    font-style                  : normal;
  }


//==============================================================================================
// COLLECTION
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify (product) collections.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-collection {

    // Filters (Tags), Sort
    [class*="section-header"] {
      margin                    : $gutter 0 ($gutter * 2);
      vertical-align            : top;
    }
    label[for="SortBy"] {
      font-family               : $interfaceFontStack;
      text-transform            : uppercase;
    }
    select,
    select option {
      text-transform            : uppercase;
      letter-spacing            : 0.055em;
      background-color          : {{ settings.color_body_bg }};
    }

    // Collection Items
    .product-item {
      height                    : 438px;
      p,
      p a {
        margin-bottom           : 0;
        font-family             : 'Eagle Book', $bodyFontStack;
        color                   : {{ settings.color_body_text }};
        text-transform          : none;
      }
      .product-metadata {
        padding-top             : $gutter;
        text-align              : center;
        .price {
          font-family           : $bodyFontStack;
        }
      }
    }

  }

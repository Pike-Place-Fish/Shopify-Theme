//==============================================================================================
// COLLECTION
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify (product) collections.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-collection {

    // Content Area
    #PageContainer {
      background-color          : {{ settings.color_body_bg_accent }};
    }

    // Filters (Tags), Sort
    [class*="section-header"] {
      vertical-align            : top;
    }
    label[for="SortBy"] {
      text-transform            : uppercase;
    }
    select,
    select option {
      text-transform            : uppercase;
      letter-spacing            : 0.055em;
      background-color          : {{ settings.color_body_bg }};
    }

  }

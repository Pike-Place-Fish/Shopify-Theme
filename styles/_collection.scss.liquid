//==============================================================================================
// COLLECTION
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify (product or blog)
// collections.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-collection,
  .template-blog {

    // Grid Normalization
    .grid-collection {
      display                   : flex;
      flex-wrap                 : wrap;
      margin-left               : -($gutter);
    }

    // Splash Image
    .image-splash {
    //margin-bottom             : ($gutter * 2.5);
    }

    // Filters (Tags), Sort
    [class*="section-header"] {
      margin                    : 0 0 ($gutter * 2);
      vertical-align            : top;
      @include at-query($max, $preMedium) {
        margin-bottom           : ($gutter * 1.5);
      }
    }
    ul.collection-filters {
      margin-top                : 2px;
      @include at-query($max, $preMedium) {
        margin-top              : ($gutter * 1.5);
      }
    }
    label[for="SortBy"],
    select,
    select option {
      font-family               : $interfaceFontStack;
      font-size                 : em(12px);
      text-transform            : uppercase;
    }
    select,
    select option {
      background-color          : {{ settings.color_body_bg }};
    }
    select {
      padding                   : 2px 25px 2px 10px;
    }

    // Collection Items
    .product-item,
    .article-item {
      margin-bottom             : ($gutter * 2);
      p,
      p a {
        margin-bottom           : 0;
        font-family             : $headerFontStack;
        font-weight             : 600;
        color                   : {{ settings.color_body_text }};
        text-transform          : none;
      }
      a {
        &:hover,
        &:focus,
        &:active {
          h5 {
            color               : {{ settings.color_primary }};
          }
        }
      }
      .product-metadata,
      .article-metadata {
        padding-top             : $gutter;
        text-align              : center;
        .h5 {
          font-weight           : 700;
        }
        .price {
          font-family           : $interfaceFontStack;
          font-weight           : 500;
        }
      }
    }

  }

//==============================================================================================
// COLLECTION
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify (product) collections.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-collection {

    // Grid Normalization
    .grid-collection {
      margin-left               : -($gutter);
    }

    // Filters (Tags), Sort
    [class*="section-header"] {
      margin                    : $gutter 0 ($gutter * 2);
      vertical-align            : top;
    }
    ul.collection-filters {
      margin-top                : 2px;
    }
    label[for="SortBy"],
    select,
    select option {
      font-family               : $interfaceFontStack;
      font-size                 : em(12px);
      text-transform            : uppercase;
    }
    select,
    select option {
      background-color          : {{ settings.color_body_bg }};
    }
    select {
      padding                   : 2px 25px 2px 10px;
    }

    // Collection Items
    .product-item {
      margin-bottom             : ($gutter * 2);
      p,
      p a {
        margin-bottom           : 0;
        font-family             : $headerFontStack;
        font-weight             : 600;
        color                   : {{ settings.color_body_text }};
        text-transform          : none;
      }
      .product-metadata {
        padding-top             : $gutter;
        text-align              : center;
        .h5 {
          font-weight           : 700;
        }
        .price {
          font-family           : $interfaceFontStack;
          font-weight           : 500;
        }
      }
    }

  }

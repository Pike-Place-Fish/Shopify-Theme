//==============================================================================================
// BEEKETING BOOST SALES APP POPUPS
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Boost Sales app popup styles.
//----------------------------------------------------------------------------------------------
// NOTE: Most if not all style overrides must be suffixed with the !important flag, due to
// these styles being loaded prior to the Boost Sales app popup iframe styles.
//----------------------------------------------------------------------------------------------
// NOTE: Some styles require several levels of nested CSS class specificity in order to be able
// to appropriately override the style settings.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  #scn-bsales {

    &.bk-bsales-focus {
      .scn-bsales-popup.bsales-v-offer {
        #bsales-wrap-offer {

          .bsales-product-detail {

            // "Target Product" (Product Just Ordered) Summary Area
            .target-product {
              padding-top       : 50px !important;
              background-color  : {{ settings.color_body_bg_accent }} !important;

              &:before {
                position        : relative !important;
                top             : 0 !important;
                left            : 0 !important;
                width           : 0 !important;
                height          : 0 !important;
                background-image: none !important;
              }

              // Checkout button
              .scn-bsales-title {
                .scn-bsales.scn-table {
                  .bk-upsell-tbody {
                    .bk-upsell-tr.bk-product {
                      .bk-upsell-td.bk-product-right {
                        .bk-product-container {
                          .bk-button-checkout {
                            .scn-product-button {
                              a.scn-button-check {
                                border-radius           : 0 !important;
                                padding                 : 8px 10px !important;
                                width                   : auto !important;
                                min-width               : 128px !important;
                                font-family             : $interfaceFontStack !important;
                                font-size               : $baseFontSize !important;
                                line-height             : 142% !important;
                                font-weight             : 700 !important;
                                color                   : {{ settings.color_body_bg }} !important;
                                text-transform          : uppercase !important;
                                background              : $colorBtnSecondary none repeat scroll 0 0 !important;
                                &:hover,
                                &:focus,
                                &:active {
                                  box-shadow            : none !important;
                                }
                                &:hover {
                                  background-color      : $colorBtnSecondaryHover !important;
                                  color                 : $colorBtnSecondaryText !important;
                                }
                                &:active,
                                &:focus {
                                 background-color       : $colorBtnSecondaryActive !important;
                                 color                  : $colorBtnSecondaryText !important;
                                }


                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }

              // "Add to Cart" buttons
              // #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product .scn-offers-partial .upsell-row .upsell-container .scn-form .scn-bsales-container .scn-bsales-row .bk-product .bk-des-container .bk-action button.scn-addtocart
              &.bk-two-product {
                .scn-offers-partial {

                  .upsell-row {
                    .upsell-container {
                      .scn-form {
                        .scn-bsales-container {
                          .scn-bsales-row {
                            .bk-product {
                              .bk-des-container {
                                .bk-action {
                                  button.scn-addtocart {
                                    border-radius       : 0 !important;
                                    -webkit-border-radius : 0 !important;
                                    font-family: $interfaceFontStack !important;
                                    font-size: $baseFontSize !important;
                                    color               : {{ settings.color_body_bg }} !important;
                                    background-color    : $colorBtnPrimary !important;
                                    &:hover,
                                    &:focus,
                                    &:active {
                                      box-shadow        : none !important;
                                    }
                                    &:hover {
                                      background-color  : $colorBtnPrimaryHover !important;
                                      color             : $colorBtnPrimaryText !important;
                                    }
                                    &:active,
                                    &:focus {
                                     background-color   : $colorBtnPrimaryActive !important;
                                     color              : $colorBtnPrimaryText !important;
                                    }

                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }

            }
          }

        }
      }
    }

    // Common Elements
    a {
      font-family               : $interfaceFontStack !important;
      color                     : $colorLinkText !important;
    }

    // Typography
    .upsell-title,
    .title.you-added {
      font-family               : $headerFontStack !important;
      font-weight               : 800 !important;
    }
    h3.upsell-title {
      font                      : em(18px) $headerFontStack !important;
      font-weight               : 800 !important;
    }
    h3.title.you-added {
      padding-left              : 0 !important;
    }

    // Buttons, Actions (e.g., close 'X')
    // #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail .target-product .scn-bsales-title .scn-bsales.scn-table .bk-upsell-tbody .bk-upsell-tr.bk-product .bk-upsell-td.bk-product-right .bk-product-container .bk-button-checkout .scn-product-button a.scn-button-check
    .bk-action button,
    .scn-button-check,
    .bk-button-inline {
      button {
        border-radius           : none !important;
        &:hover,
        &:focus,
        &:active {
          box-shadow            : none !important;
        }
      }
    }
    /* -- add to cart btns
      &:hover {
        background-color: $colorBtnPrimaryHover;
        color: $colorBtnPrimaryText;
      }

      &:active,
      &:focus {
       background-color: $colorBtnPrimaryActive;
       color: $colorBtnPrimaryText;
      }
    */
    .bk-header-right {
      float                     : right;
      padding-right             : 2px;
      .bk-line {
        display                 : none !important;
      }
      .scn-button-view,
      .scn-button-continue {
        display                 : inline-block;
        padding                 : 8px $gutter !important;
        width                   : auto !important;
        min-width               : 128px !important;
        font-family             : $interfaceFontStack !important;
        font-size               : $baseFontSize !important;
        line-height             : 142% !important;
        font-weight             : 700 !important;
        color                   : {{ settings.color_body_bg }} !important;
        text-align              : center !important;
        text-transform          : uppercase !important;
        text-decoration         : none !important;
      }
      .scn-button-view {
        margin-right            : $gutter !important;
        background-color        : $colorBtnPrimary !important;
        &:hover {
          background-color      : $colorBtnPrimaryHover !important;
          color                 : $colorBtnPrimaryText !important;
        }
        &:active,
        &:focus {
         background-color       : $colorBtnPrimaryActive !important;
         color                  : $colorBtnPrimaryText !important;
        }
      }
      .scn-button-continue {
        background-color        : $colorBtnSecondary !important;
        &:hover {
          background-color      : $colorBtnSecondaryHover !important;
          color                 : $colorBtnSecondaryText !important;
        }
        &:active,
        &:focus {
         background-color       : $colorBtnSecondaryActive !important;
         color                  : $colorBtnSecondaryText !important;
        }
      }
    }


//#scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product a.scn-close:before
// #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product a.scn-close
    a.scn-close {
      background-color          : $colorBtnSecondaryHover !important;   // #262626
      &:before {
        border-bottom-color     : {{ settings.color_body_bg_accent }} !important;
        border-left-color       : {{ settings.color_body_bg_accent }} !important;
        background              : transparent url({{ 'RecommendedProducts.CloseX.png' | asset_url }}) no-repeat scroll 35px 8px !important;
      }
      &:hover,
      &:focus,
      &:active {
        background-color        : $colorBtnSecondary !important;
        background              : $colorBtnSecondaryHover url({{ 'RecommendedProducts.CloseXHover.png' | asset_url }}) no-repeat scroll 35px 8px !important;
      }
    }

    /*
    #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product .scn-offers-partial .upsell-row .upsell-container .scn-form .scn-bsales-container .scn-bsales-row .bk-product .bk-des-container .bk-action button.scn-addtocart
    */

    button.scn-addtocart {
      border-radius             : 0 !important;
      -webkit-border-radius     : 0 !important;
      font-family               : $interfaceFontStack !important;
      font-size                 : $baseFontSize !important;
      font-weight               : 700 !important;
      color                     : {{ settings.color_body_bg }} !important;
      text-transform            : uppercase !important;
      background-color          : $colorBtnPrimary !important;
      &:hover,
      &:focus,
      &:active {
        box-shadow              : none !important;
      }
      &:hover {
        background-color        : $colorBtnPrimaryHover !important;
        color                   : $colorBtnPrimaryText !important;
      }
      &:active,
      &:focus {
       background-color         : $colorBtnPrimaryActive !important;
       color                    : $colorBtnPrimaryText !important;
      }

    }

    // "You Just Added" Product summary
    // #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail .target-product .scn-bsales-title .scn-bsales.scn-table .bk-upsell-tbody .bk-upsell-tr.bk-product .bk-upsell-td.bk-product-right .bk-product-container .bk-product-text:before
    .scn-bsales-title {
      div.bk-product {
        margin-top              : ($gutter * 1.5) !important;
      }
    }
    .bk-product-container {
      .bk-product-text {
        padding-top             : 5px !important;
        padding-left            : ($gutter * 2.5 !important);
        &:before {
          width                 : 0 !important;
        }
        div.scn-product-text {
          display               : none !important;
        }
        div.bk-price-total {
          .scn-total-price {
            font-family         : $interfaceFontStack !important;
          }
        }
      }
    }

    .bk-name {
      a {
        font-family             : $headerFontStack !important;
        font-size               : $baseFontSize !important;
        line-height             : 105% !important;
        color                   : {{ settings.color_secondary }} !important;
        text-decoration         : none !important;
        strong {
          max-height            : 40px !important;
          font-weight           : 700 !important;
        }
      }
    }

    // "Show More Items" spacer
    // #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product .scn-offers-partial .bk-show-item
    .bk-show-item {
      min-height                : 15px !important;
      &:before {
        height                  : 0 !important;
      }
    }

    // Recommended Products form/items
    .upsell-container {
      .scn-form {
        &:nth-child(1):before {
          background-color      : transparent !important;
        }
        .bk-name {
          h4 {
            min-height          : ($gutter * 3) !important;
            overflow-y          : visible !important;
            a {
              font-family       : $interfaceFontStack !important;
              font-size         : 12px !important;
              color             : {{ settings.color_secondary }} !important;
              font-weight       : 700 !important;
              text-decoration   : none !important;
            }
          }
        }
        div.scn-price-product {
          margin-top            : 8px !important;
          .scn-new {
            span.money {
              font-family       : $interfaceFontStack !important;
              font-size         : em(12px) !important;
            }
          }
        }
        .bk-action {
          button.ladda-button.scn-addtocart,
          button[type="submit"] {
            border-radius       : 0 !important;
            -webkit-border-radius: 0 !important;
          }
        }
      }
    }
    #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product .scn-offers-partial .upsell-row .upsell-container .scn-form .scn-bsales-container .scn-bsales-row .bk-product .bk-des-container .bk-action button.scn-addtocart {
      border-radius             : 0px!important;
      -webkit-border-radius     : 0px!important;
    }

  }

//==============================================================================================
// BEEKETING BOOST SALES APP POPUPS
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Boost Sales app popup styles.
//----------------------------------------------------------------------------------------------
// NOTE: Most if not all style overrides must be suffixed with the !important flag, due to
// these styles being loaded prior to the Boost Sales app popup iframe styles.
//----------------------------------------------------------------------------------------------
// NOTE: Some styles require several levels of nested CSS class specificity in order to be able
// to appropriately override the style settings.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  #scn-bsales {

    // Common Elements
    a {
      font-family               : $interfaceFontStack !important;
      color                     : $colorLinkText !important;
    }

    // Typography
    .upsell-title,
    .title.you-added {
      font-family               : $headerFontStack !important;
      font-weight               : 800 !important;
    }
    h3.upsell-title {
      font                      : em(18px) $headerFontStack !important;
      font-weight               : 800 !important;
    }
    h3.title.you-added {
      padding-left              : 0 !important;
      text-transform            : uppercase;
    }

    &.bk-bsales-focus {
      .scn-bsales-popup.bsales-v-offer {
        #bsales-wrap-offer {

          .bsales-product-detail {

            // Two-Product Recommendation
            &.bk-two-product {
            }

            // One-Product Recommendation
            &.bk-one-product {
              .scn-image-product-title {
                width           : 138px !important;
                height          : 138px !important;
                img {
                  max-width     : 135px !important;
                  max-height    : 135px !important;
                  vertical-align: top !important;
                }
              }
              .bk-des-container {
                position        : relative;
                min-height      : 135px !important;
                .bk-action {
                  position      : absolute;
                  bottom        : 0;
                  button.scn-addtocart {
                    min-width   : 128px !important;
                  }
                }
              }
            }

            // Recommended Product addition confirmation
            &.bk-empty-upsales {
              .bk-product-container {
                .bk-product-text {
                  clear         : right;
                  display       : block !important;
                  width         : 100% !important;
                }
                .bk-button-checkout {
                  clear         : both !important;
                  padding-top   : 40px !important;
                }
              }
            }

            // "Target Product" (Product Just Ordered) Summary Area
            .target-product {
              padding-top       : 25px !important;
              background-color  : $colorAccent !important;

              &:before {
                position        : relative !important;
                top             : 0 !important;
                left            : 0 !important;
                width           : 0 !important;
                height          : 0 !important;
                background-image: none !important;
              }

              // Checkout button
              .scn-bsales-title {
                .scn-bsales.scn-table {
                  .bk-upsell-tbody {
                    .bk-upsell-tr.bk-product {
                      .bk-upsell-td.bk-product-right {
                        .bk-product-container {
                          .bk-button-checkout {
                            position                    : relative !important;
                            top                         : -10px !important;
                            .scn-product-button {
                              a.scn-button-check {
                                border-radius           : 0 !important;
                                padding                 : 8px 10px !important;
                                width                   : 136px !important;
                                min-width               : 128px !important;
                                max-width               : 136px !important;
                                font-family             : $interfaceFontStack !important;
                                font-size               : $baseFontSize !important;
                                line-height             : 142% !important;
                                font-weight             : 700 !important;
                                color                   : $colorBody !important;
                                text-transform          : uppercase !important;
                                background              : $colorBtnPrimary none repeat scroll 0 0 !important;
                                &:hover,
                                &:focus,
                                &:active {
                                  box-shadow            : none !important;
                                }
                                &:hover {
                                  background-color      : $colorBtnPrimaryHover !important;
                                  color                 : $colorBtnPrimaryText !important;
                                }
                                &:active,
                                &:focus {
                                 background-color       : $colorBtnPrimaryActive !important;
                                 color                  : $colorBtnPrimaryText !important;
                                }


                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }

            }

          }

        }
      }
    }

    // Buttons, Actions (e.g., close 'X')
    .bk-action button,
    .scn-button-check,
    .bk-button-inline {
      button {
        border-radius           : none !important;
        &:hover,
        &:focus,
        &:active {
          box-shadow            : none !important;
        }
      }
    }
    .bk-header-right {
      display                   : none !important;
      float                     : right;
      padding-right             : 2px;
      .bk-line {
        display                 : none !important;
      }
      .scn-button-view,
      .scn-button-continue {
        display                 : inline-block;
        padding                 : 8px $gutter !important;
        width                   : auto !important;
        min-width               : 128px !important;
        font-family             : $interfaceFontStack !important;
        font-size               : $baseFontSize !important;
        line-height             : 142% !important;
        font-weight             : 700 !important;
        color                   : $colorBody !important;
        text-align              : center !important;
        text-transform          : uppercase !important;
        text-decoration         : none !important;
      }
      .scn-button-view {
        margin-right            : $gutter !important;
        background-color        : $colorBtnPrimary !important;
        &:hover {
          background-color      : $colorBtnPrimaryHover !important;
          color                 : $colorBtnPrimaryText !important;
        }
        &:active,
        &:focus {
         background-color       : $colorBtnPrimaryActive !important;
         color                  : $colorBtnPrimaryText !important;
        }
      }
      .scn-button-continue {
        background-color        : $colorBtnSecondary !important;
        &:hover {
          background-color      : $colorBtnSecondaryHover !important;
          color                 : $colorBtnSecondaryText !important;
        }
        &:active,
        &:focus {
         background-color       : $colorBtnSecondaryActive !important;
         color                  : $colorBtnSecondaryText !important;
        }
      }
    }

    a.scn-close {
      background-color          : $colorBtnSecondaryHover !important;   // #262626
      &:before {
        border-bottom-color     : $colorAccent !important;
        border-left-color       : $colorAccent !important;
        background              : transparent url({{ 'RecommendedProducts.CloseX.png' | asset_url }}) no-repeat scroll 35px 8px !important;
      }
      &:hover,
      &:focus,
      &:active {
        background-color        : $colorBtnSecondary !important;
        background              : $colorBtnSecondaryHover url({{ 'RecommendedProducts.CloseXHover.png' | asset_url }}) no-repeat scroll 35px 8px !important;
      }
    }

    #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product .scn-offers-partial .upsell-row .upsell-container .scn-form .scn-bsales-container .scn-bsales-row .bk-product .bk-des-container .bk-action button.scn-addtocart {
      border-radius             : 0 !important;
      -webkit-border-radius     : 0 !important;
    }
    button.scn-addtocart {
      border-radius             : 0 !important;
      -webkit-border-radius     : 0 !important;
      margin-top                : 10px !important;
      padding                   : 8px 10px !important;
      font-family               : $interfaceFontStack !important;
      font-size                 : $baseFontSize !important;
      font-weight               : 700 !important;
      color                     : $colorBody !important;
      text-transform            : uppercase !important;
      background-color          : $colorBtnSecondary !important;
      &:hover,
      &:focus,
      &:active {
        box-shadow              : none !important;
      }
      &:hover {
        background-color        : $colorBtnSecondaryHover !important;
        color                   : $colorBtnSecondaryText !important;
      }
      &:active,
      &:focus {
       background-color         : $colorBtnSecondaryActive !important;
       color                    : $colorBtnSecondaryText !important;
      }

    }

    // "You Just Added" Product summary
    .scn-bsales-title {
      div.bk-product {
        margin-top              : ($gutter * 1.5) !important;
      }
    }
    .bk-product-right {
      &.bk-upsell-td {
        padding-top             : 5px !important;
      }
    }
    .bk-product-container {
      overflow                  : visible !important;
      width                     : 100% !important;
      .bk-product-text {
        float                   : none !important;
        margin                  : 0 !important;
        padding-top             : 5px !important;
        padding-left            : 0 !important;
      //width                   : 60.5% !important;
        text-align              : right !important;
        &:before {
          width                 : 0 !important;
        }
        div.scn-product-text {
          display               : none !important;
        }
        div.bk-price-total {
          .scn-total-price {
            font                : 12px $interfaceFontStack !important;
            strong {
              max-width         : auto !important;
              overflow          : visible !important;
              font              : 12px $interfaceFontStack !important;
              vertical-align    : bottom !important;
              span.money {
                font-weight     : 500 !important;
              }
            }
          }
        }
      }
    }

    .bk-name {
      width                     : 100% !important;
      a {
        font-family             : $headerFontStack !important;
        font-size               : $baseFontSize !important;
        line-height             : 105% !important;
        color                   : $colorSecondary !important;
        text-decoration         : none !important;
        strong {
          max-height            : 40px !important;
          font-weight           : 700 !important;
        }
      }
    }

    // "Show More Items" spacer
    .bk-show-item {
      min-height                : 15px !important;
      &:before {
        height                  : 0 !important;
      }
    }

    // Recommended Products form/items
    .upsell-container {
      .scn-form {
        &:nth-child(1):before {
          background-color      : transparent !important;
        }
        .bk-name {
          h4 {
            min-height          : ($gutter * 3) !important;
            overflow-y          : visible !important;
            a {
              font-family       : $interfaceFontStack !important;
              font-size         : 12px !important;
              color             : $colorSecondary !important;
              font-weight       : 700 !important;
              text-decoration   : none !important;
            }
          }
        }
        div.scn-price-product {
          margin-top            : 8px !important;
          .scn-new {
            span.money {
              font-family       : $interfaceFontStack !important;
              font-size         : em(12px) !important;
            }
          }
        }
        .bk-action {
          button.ladda-button.scn-addtocart,
          button[type="submit"] {
            border-radius       : 0 !important;
            -webkit-border-radius: 0 !important;
          }
        }
      }
    }
    #scn-bsales.bk-bsales-focus .scn-bsales-popup.bsales-v-offer #bsales-wrap-offer .bsales-product-detail.bk-two-product .scn-offers-partial .upsell-row .upsell-container .scn-form .scn-bsales-container .scn-bsales-row .bk-product .bk-des-container .bk-action button.scn-addtocart {
      border-radius             : 0px!important;
      -webkit-border-radius     : 0px!important;
    }

  }

//==============================================================================================
// CART
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify shopping cart.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-cart {

    // Cart Items Table
    .cart__row {
      border-top                : 0 none transparent;
    }

    .cart-table {
      border-width              : 0;

      th,
      td {
        padding                 : ($gutter * 1.5);
      }

      .cart__row {
        &.table__section:nth-child(odd) {
          background-color      : {{ settings.color_body_bg }};
          input[type="number"],
          input[type="text"] {
            background-color    : {{ settings.color_body_bg_accent }};
          }
        }
      }

      thead th,
      tbody td .h3.price {
        font-family             : $interfaceFontStack;
      }

      thead {
        th {
          font-size             : em(12px);
          font-weight           : 700;
          text-transform        : uppercase;
        }
      }

      tbody {
        td {
          &.thumbnail {
            max-width           : 25%;
          }
          &.details {
            position            : relative;
          }
          &.summary {
            padding-top         : ($gutter * 5);
            padding-bottom      : ($gutter * 5);
            vertical-align      : bottom;
          }

          div.title,
          div.actions {
            position            : absolute;
          }

          div.title {
            top                 : ($gutter * 1.5);
            h4 {
              margin-bottom     : 0;
              color             : {{ settings.color_body_text }};
              text-transform    : none;
            }
          }

          div.actions {
            bottom              : ($gutter * 1.5);
          }

          .h3.price {
            display             : inline-block;
            font-size           : em(14px);
            font-weight         : 600;
            white-space         : nowrap;
          }
          .cart__remove {
            font-family         : 'Cabin Semibold', $bodyFontStack;
            color               : {{ settings.color_interface_accent }};
            text-transform      : uppercase;
          }
        }
      }

    }

    // Summary Information
    .summary {
      a[class*="btn"],
      input[type="submit"] {
        margin-top              : ($gutter * 2);
      }
    }
    h3,
    p {
      margin-bottom             : 0;
      &.order-weight-heading,
      &.order-weight-disclaimer {
        color                   : {{ settings.color_primary }};
      }
    }

  }

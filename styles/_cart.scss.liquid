//==============================================================================================
// CART
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify shopping cart.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-cart {

    // Page Chrome
    div.page-container {
      background-color          : {{ settings.color_body_bg }};
    }

    // Cart Items Table
    .cart__row {
      border-top                : 0 none transparent;
    }

    .cart-table {
      border-width              : 0;

      .cart__row.table__section {
        /*
        border-bottom           : 2px solid {{ settings.color_body_bg_accent }};
        &:nth-child(odd) {
          background-color      : {{ settings.color_body_bg }};
          input[type="number"],
          input[type="text"] {
            background-color    : {{ settings.color_body_bg_accent }};
          }
        }
        */
      }

      thead th,
      tbody td .h3.price {
        font-family             : $interfaceFontStack;
      }

      thead {
        th {
          padding               : ($gutter * 1.5);
          font-size             : em(12px);
          font-weight           : 700;
          text-transform        : uppercase;
          background-color      : {{ settings.color_body_bg_accent }};
        }
      }

      tbody {
        td {
          padding               : ($gutter * 2) ($gutter * 1.5);
          &.thumbnail,
          &.price,
          &.quantity,
          &.total {
            @include at-query($min, 1024px) {
              max-width         : 12.5%;
            }
          }
          &.thumbnail {
            img {
              width             : 100%;
              max-width         : 125px;
            }
          }
          &.details {
            position            : relative;
            padding-left        : ($gutter);
            @include at-query($min, 1024px) {
              width             : 50%;
            }
            @include at-query($min, 1280px) {
              width             : 65%;
            }
          }
          &.quantity {
            input {
              max-width         : 80px;
            }
          }
          &.summary {
            padding-top         : ($gutter * 5);
            padding-bottom      : ($gutter * 5);
            vertical-align      : bottom;
          }

          div.title,
          div.actions {
            @include at-query($min, $medium) {
              position          : absolute;
            }
          }

          div.title {
            top                 : ($gutter * 1.5);
            h4 {
              margin-bottom     : 0;
              color             : {{ settings.color_body_text }};
              text-transform    : none;
            }
          }

          div.actions {
            bottom              : ($gutter * 2.5);
            a {
              display           : inline-block;
              margin-right      : ($gutter);
              font-family       : 'Cabin Semibold', $bodyFontStack;
              color             : {{ settings.color_interface_accent }};
              text-transform    : uppercase;
            }
          }

          .h3.price {
            display             : inline-block;
            font-size           : em(14px);
            font-weight         : 600;
            white-space         : nowrap;
          }
        }
      }

    }

    // Summary Information
    .summary {
      a[class*="btn"],
      input[type="submit"] {
        margin-top              : ($gutter * 2);
        min-width               : 125px;
        font-size               : em(12.5px);
      }
    }
    h3,
    p {
      margin-bottom             : 0;
      &.order-weight-heading,
      &.order-weight-disclaimer {
        color                   : {{ settings.color_primary }};
      }
    }

  }

//==============================================================================================
// INDEX
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify home page.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-index {

    // Grid normalization
    .bottom-buffer {
      margin-bottom             : ($gutter / 2);
    }

    // Banner/video area
    .banner-container {
      position                  : relative;
      .logo,
      .tagline.shop-link {
        z-index                 : 5;
        position                : absolute;
        top                     : 0;
        right                   : 0;
        bottom                  : ($gutter / 2);
        left                    : 0;
        text-align              : center;
        background              : rgba(0, 0, 0, 0.5);           // TODO: Remove or adjust with final video
      }
      .logo {
        padding-top             : 6.75%;
      }
      .tagline.shop-link {
        display                 : none;
        padding-top             : 25.5%;
        h1 {
          font-size             : em(42px);
          color                 : {{ settings.color_body_bg }};
          -webkit-text-stroke-width     : 1px;
          -webkit-text-stroke-color     : {{ settings.color_secondary }};
        }
        .btn {
          font-size             : em(26px);
        }
      }
    }

    // Product promotions, page links
    .product-promotion,
    .page-link {
      display                   : table;
      position                  : relative;
      width                     : 100%;
      height                    : 100%;

      // promotion details, page link details
      .promotion-data,
      .link-data {
        display                 : table-cell;
        text-align              : center;
        vertical-align          : middle;
        font-family             : 'Eagle Book', $bodyFontStack;
        font-size               : em(19px);
        line-height             : 110%;
        color                   : {{ settings.color_body_bg }};
        h2,
        p {
          font-family           : 'Eagle Book', $bodyFontStack;
          font-size             : em(19px);
          text-transform        : uppercase;
        }
      }

    }
    .product-promotion {
      padding                   : 3.24%;
      background-repeat         : no-repeat;
      background-position       : 0 0;
      background-size           : 100%;

      // promotion types
      &.blue {
        background-color        : rgb(80, 138, 159);            // #F08A9F
      }
      &.orange {
        background-color        : rgb(241, 146, 63);            // #F1923F
      }
      &.green {
        background-color        : rgb(81, 165, 82);             // #51A552
      }
      &.grey {
        background-color        : rgb(110, 110, 110);           // ##6E6E6E
      }
      .promotion-data {
        padding                 : 3.24%;
        border                  : 4px solid {{ settings.color_body_bg }};
      }
    }
    .page-link {
      .link-data {
        z-index                 : 1;
        position                : relative;
        &:hover,
        &:focus,
        &:active {
          .overlay,
          .link-text {
            display             : block;
          }
        }
        .overlay {
          z-index               : 3;
          display               : none;
          vertical-align        : middle;
          position              : absolute;
          top                   : 0;
          right                 : 0;
          bottom                : 4px;                          // TODO: Figure out why this is needed
          left                  : 0;
          background-color      : rgba(0, 0, 0, 0.4);
        }
        .link-text {
          z-index               : 5;
          position              : absolute;
          top                   : 50%;
          -webkit-transform     : translateY(-50%);
          -ms-transform         : translateY(-50%);
          transform             : translateY(-50%);
          h2 {
            margin-bottom       : 0;
          }
        }
      }
    }

  }
//==============================================================================================
// INDEX
//----------------------------------------------------------------------------------------------
// Represents styles specific to the Pike Place Fish Market Shopify home page.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------

//----------------------------------------------------------------------------------------------
// VIEW
//----------------------------------------------------------------------------------------------
  .template-index {

    .site-header {
      .wrapper {
        padding                 : 0 $gutter;
      }
    }

    div.page-container {
      background-color          : {{ settings.color_body_bg }};
    }
    .main-content {
      margin-top                : $gutter;
      padding                   : 0 $gutter ($gutter / 2);
    }

    // Grid normalization
    /*
    .grid__item {
      display                   : flex;
      align-items               : stretch;
      .grid__item {
        display                 : initial;
      }
    }
    */
    .buffer-bottom {
      margin-bottom             : ($gridGutter / 2);
    }

    // Banner/video area
    .banner-container {
      position                  : relative;
      .logo,
      .tagline.shop-link {
        z-index                 : 5;
        position                : absolute;
        top                     : 0;
        right                   : 0;
        bottom                  : ($gutter / 2);
        left                    : 0;
        text-align              : center;
        background              : rgba(0, 0, 0, 0.5);           // TODO: Remove or adjust with final video
      }
      .logo {
        padding-top             : 6.75%;
        img {
          max-width             : 25%;
        }
      }
      .tagline.shop-link {
        display                 : none;
        padding-top             : 25.5%;
        @include at-query ($max, $medium) {
          padding-top           : 20.5%;
        }
        h1 {
          font-size             : em(42px);
          color                 : {{ settings.color_body_bg }};
          -webkit-text-stroke-width     : 1px;
          -webkit-text-stroke-color     : {{ settings.color_secondary }};
          @include at-query ($max, $small) {
            color               : rgb(67, 148, 68);             // #439444 TODO: Add to settings
          }
          @include at-query ($max, $medium) {
            font-size           : 4.281vw;
          }
          @include at-query (null, $medium, $large) {
            font-size           : 3.281vw;
          }
        }
      }
    }

    // Product promotions, page links
    .product-promotion,
    .page-link {
      display                   : table;
      position                  : relative;
      width                     : 100%;
      height                    : 100%;

      // promotion details, page link details
      .promotion-data,
      .link-data {
        display                 : table-cell;
        text-align              : center;
        vertical-align          : middle;
        color                   : {{ settings.color_body_bg }};
        h2,
        p {
          line-height           : 120%;
          text-transform        : uppercase;
        }
        h2 {
          margin                : 0;
          font-family           : $headerFontStack;
          font-size             : em(24px);
          font-weight           : 800;
          @include at-query ($max, $medium) {
            font-size           : 4vw;
          }
          @include at-query (null, $medium, $large) {
            font-size           : 1.91vw;
          }
        }
        p {
          margin-bottom         : 0;
          font-family           : $interfaceFontStack;
          font-size             : em(18px);
          font-weight           : 600;
          @include at-query ($max, $medium) {
            font-size           : 3.25vw;
          }
          @include at-query (null, $medium, $large) {
            font-size           : 1.43vw;
          }
        }
      }

    }
    .product-promotion {
      padding                   : $gutter;
      background-repeat         : no-repeat;
      background-position       : 0 0;
      background-size           : 100%;

      // promotion types
      &.blue {
        background-color        : rgb(80, 138, 159);            // #F08A9F
        background-image        : url({{ 'Home.PromoTexture1.png' | asset_url }});
      }
      &.orange {
        background-color        : rgb(241, 146, 63);            // #F1923F
        background-image        : url({{ 'Home.PromoTexture2.png' | asset_url }});
      }
      &.green {
        background-color        : rgb(81, 165, 82);             // #51A552
        background-image        : url({{ 'Home.PromoTexture3.png' | asset_url }});
      }
      &.grey {
        background-color        : rgb(110, 110, 110);           // ##6E6E6E
        background-image        : url({{ 'Home.PromoTexture4.png' | asset_url }});
      }
      .promotion-data {
        padding                 : ($gridGutter / 2) $gutter;
        border                  : 4px solid {{ settings.color_body_bg }};
      }
    }
    .page-link {

      // For using the images as backgrounds, for more consistent alignment across viewport sizes
      background-color          : transparent;
      background-repeat         : no-repeat;
      background-position       : 0 0;
      background-size           : cover;

      .link-data {
        z-index                 : 1;
        position                : relative;
        &:hover,
        &:focus,
        &:active {
          .link-image.hover {
            z-index             : 5;
          }
          .overlay {
            display             : block;
          }
        }
        .link-image {
          &.default,
          &.hover {
            z-index             : 3;
            position            : absolute;
            top                 : 0;
            left                : 0;
          }
          &.hover {
            z-index             : 2;
          }
        }
        .overlay {
          z-index               : 3;
          display               : none;
          vertical-align        : middle;
          position              : absolute;
          top                   : 0;
          right                 : 0;
          bottom                : 0;
          left                  : 0;
          background-color      : rgba(0, 0, 0, 0.4);
        }
        .link-text {
          z-index               : 5;
          /*
          position              : absolute;
          top                   : 50%;
          -webkit-transform     : translateY(-50%);
          -ms-transform         : translateY(-50%);
          transform             : translateY(-50%);
          */
          display               : table;
          width                 : 100%;
          height                : 100%;
          h2 {
            display             : table-cell;
            margin-bottom       : 0;
            padding             : 0 5%;
            text-align          : center;
            vertical-align      : middle;
            width               : 100%;
          }
        }
      }
    }

  }
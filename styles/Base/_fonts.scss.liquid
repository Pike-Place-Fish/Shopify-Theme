//==============================================================================================
// FONTS
//----------------------------------------------------------------------------------------------
// Imports web fonts, such as EOT, WOFF, OTF, etc.
//----------------------------------------------------------------------------------------------
// NOTE: Font styles should be defined in _typography.scss.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// PROMPT
//----------------------------------------------------------------------------------------------
  @import url(https://fonts.googleapis.com/css?family=Prompt:400,600,700,800);

//----------------------------------------------------------------------------------------------
// OPEN SANS
//----------------------------------------------------------------------------------------------
  @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800);

//----------------------------------------------------------------------------------------------
// ICONS
//----------------------------------------------------------------------------------------------
  @font-face {
    font-family                 : 'icons';
    src                         : url('{{ "icons.eot" | asset_url }}');
    src                         : url('{{ "icons.eot" | asset_url }}#iefix') format("embedded-opentype"),
      url('{{ "icons.woff" | asset_url }}') format("woff"),
      url('{{ "icons.ttf" | asset_url }}') format("truetype"),
      url('{{ "icons.svg" | asset_url }}#timber-icons') format("svg");
    font-weight                 : normal;
    font-style                  : normal;
  }

//----------------------------------------------------------------------------------------------
// CABIN
//----------------------------------------------------------------------------------------------
  @font-face {
    font-family                 : 'Cabin Regular';
    src                         : url({{ 'Cabin-Regular.otf' | asset_url }});
    src                         : url({{ 'Cabin-Regular.otf?' | asset_url }}) format('opentype'),
      url({{ 'Cabin-Regular.woff' | asset_url }}) format('woff'),
      url({{ 'Cabin-Regular.woff2' | asset_url }}) format('woff2');
    font-weight                 : normal;
    font-style                  : normal;
  }
  @font-face {
    font-family                 : 'Cabin Semibold';
    src                         : url({{ 'Cabin-SemiBold.otf' | asset_url }});
    src                         : url({{ 'Cabin-SemiBold.otf?' | asset_url }}) format('opentype'),
      url({{ 'Cabin-SemiBold.woff' | asset_url }}) format('woff'),
      url({{ 'Cabin-SemiBold.woff2' | asset_url }}) format('woff2');
    font-weight                 : normal;
    font-style                  : normal;
  }
  @font-face {
    font-family                 : 'Cabin Bold';
    src                         : url({{ 'Cabin-Bold.otf' | asset_url }});
    src                         : url({{ 'Cabin-Bold.otf?' | asset_url }}) format('opentype'),
      url({{ 'Cabin-Bold.woff' | asset_url }}) format('woff'),
      url({{ 'Cabin-Bold.woff2' | asset_url }}) format('woff2');
    font-weight                 : normal;
    font-style                  : normal;
  }


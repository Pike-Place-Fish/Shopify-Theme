//----------------------------------------------------------------------------------------------
// DRAWERS
//----------------------------------------------------------------------------------------------
// NOTE: Structural definitions (positioning, grid, etc.) for *overall* drawers styles moved to
// _layout.scss.liquid.
//----------------------------------------------------------------------------------------------
  .drawer {
    @include promote-layer();
    color                       : $colorDrawerText;
    background-color            : $colorDrawers;
    transition                  : $drawerTransition;

    a {
      color                     : $colorDrawerText;
      &:hover,
      &:focus {
        opacity                 : 0.7;
      }
    }

    input,
    textarea {
      border-color              : $colorDrawerBorder;
    }
  }

  .drawer--left {
    border-right                : 1px solid $colorDrawerBorder;
    .js-drawer-open-left & {
      display                   : block;
      @include transform(translateX($drawerNavWidth));
      .lt-ie9 & {
        left                    : 0;
      }
    }
  }

  .drawer--right {
    border-left                 : 1px solid $colorDrawerBorder;
    .js-drawer-open-right & {
      display                   : block;
      @include transform(translateX(-$drawerCartWidth));
      .lt-ie9 & {
        right                   : 0;
      }
    }
  }

  #PageContainer {
    //overflow: hidden;                                         // Removed
  }

  .is-moved-by-drawer {
    @include promote-layer();
    transition                  : $drawerTransition;

    .js-drawer-open-left & {
      @include transform(translateX($drawerNavWidth));
    }

    .js-drawer-open-right & {
      @include transform(translateX(-$drawerCartWidth));
    }
  }

  .drawer__header {
    display                     : table;
    margin-bottom               : $gutter / 2;
    //height: 70px;                                             // Removed
    width                       : 100%;
    background                  : $colorBody;
    //border-bottom: 1px solid $colorDrawerBorder;              // Removed
  }

  .drawer__title,
  .drawer__close {
    display                     : table-cell;
    vertical-align              : middle;
  }

  .drawer__title {
    width                       : 100%;
  }

  .drawer__close {
    padding-right               : 5%;                           // New
    width                       : 1%;
    font-size                   : em(18px);
    text-align                  : right;                        // Was center
  }

  .drawer__close button {
    position                    : relative;
    right                       : -20px;
    padding                     : 0 20px;
    height                      : 100%;
    color                       : inherit;
    &:active,
    &:focus {
      //background-color: darken($colorDrawers, 5%);            // Removed
    }
  }

//----------------------------------------------------------------------------------------------
// SITE FOOTER
//----------------------------------------------------------------------------------------------
// NOTE: Structural definitions (positioning, grid, etc.) for *overall* site footer moved to
// _layout.scss.liquid.
//----------------------------------------------------------------------------------------------
  .site-footer {
    font-size                   : em(12px);                     // New
    color                       : $colorFooterText;
    background-color            : $colorFooterBg;
    @include at-query ($max, $preMedium) {                      // New
      padding                   : $gutter 0 ($gutter * 2);
    }
    @include at-query ($min, $medium) {                         // New
      padding                   : $gutter 0 ($gutter * 1.5);
    }
    @include at-query ($min, $large) {
      padding                   : 17px 0 0;                     // Was padding: ($gutter * 2) 0
    }

    // New
    .grid__item {
      display                   : table-cell;
      vertical-align            : middle;
    }

    // New
    a {
      display                   : inline-block;
      color                     : $colorFooterText;
      white-space               : nowrap;
    }

    // Copyright, Links (New)
    p,
    div {
      margin-bottom             : 0;
      &.copyright,
      &.links {
        @include at-query ($max, $preMedium) {
          padding-top           : $gutter;
        }
        @include at-query ($min, $medium) {
          padding-top           : 4px;
        }
      }
      &.copyright {
        padding-left            : ($gutter * 1.333);
        @include at-query ($max, $preMedium) {
          padding-left          : 0;
        }
      }
      &.links {
        padding-right           : ($gutter * 1.333);
        @include at-query ($max, $preMedium) {
          padding-right         : 0;
          padding-bottom        : 8px;
        }
        @include at-query ($min, $medium) {
          text-align            : right;
        }
      }
    }
    div.links {
      ul.link-list {
        li {
          &:after {
            content             : "\00b7";
            display             : inline-block;
            padding             : 0 2px 0 5px;
          }

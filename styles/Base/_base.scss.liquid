//==============================================================================================
// BASE CLASSES
//----------------------------------------------------------------------------------------------
// Provides global overrides for standard HTML elements based on element, attribute, and single-
// class selectors. Selectors in this section should never be nested more than two layers deep.
//----------------------------------------------------------------------------------------------
// NOTE: Unless otherwise specified (e.g., with "// New", or "// Was [property value]"), styles
// are OOTB Timber definitions; only formatting and property organization have been altered.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// IMPORTS
//----------------------------------------------------------------------------------------------
  @import url('_utilities.scss.liquid');
  @import url('_fonts.scss.liquid');
  @import url('_icons.scss.liquid');
  @import url('_typography.scss.liquid');
  @import url('_forms.scss.liquid');
  @import url('_navigation.scss.liquid');

//----------------------------------------------------------------------------------------------
// NORMALIZE/RESET
//----------------------------------------------------------------------------------------------
  *, input, :before, :after {
    box-sizing                  : border-box;
  }
  html,
  body {
    margin                      : 0;
    padding                     : 0;
  }
  article,
  aside,
  details,
  figcaption,
  figure,
  footer,
  header,
  hgroup,
  main,
  nav,
  section,
  summary {
    display                     : block;
  }
  audio,
  canvas,
  progress,
  video {
    display                     : inline-block;
    vertical-align              : baseline;
  }
  input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button {
    height                      : auto;
  }
  input[type="search"]::-webkit-search-cancel-button,
  input[type="search"]::-webkit-search-decoration {
    -webkit-appearance          : none;
  }

//----------------------------------------------------------------------------------------------
// DOCUMENT
//----------------------------------------------------------------------------------------------
  html {
    background-color            : $colorFooterBg;
  }
  body {
    background-color            : $colorBody;
  }

//----------------------------------------------------------------------------------------------
// COMMON ELEMENTS
//----------------------------------------------------------------------------------------------

  // Selected/Active Content
  [tabindex='-1']:focus {
    outline                     : none;
  }

  // Blockquotes
  blockquote {
    margin                      : 0 0 $gutter;
    border-left                 : 1px solid $colorBorder;
    padding                     : ($gutter / 2) $gutter;
    font-size                   : 1.125em;
    line-height                 : 1.45;
    font-style                  : italic;
    p {
      margin-bottom: 0;
      & + cite {
        margin-top              : $gutter / 2;
      }
    }
    cite {
      display                   : block;
      font-size                 : 0.75em;
      &:before {
        content                 : '\2014 \0020';
      }
    }
  }

  // Code
  code,
  pre {
    border                      : 0 none;
    padding                     : 0 2px;
    font-family                 : Consolas,monospace;
    font-size                   : 1em;
    color                       : #51ab62;
    background-color            : #faf7f5;
  }
  pre {
    overflow                    : auto;
    margin                      : 0 0 $gutter;
    padding                     : $gutter / 2;
  }

  // Horizontal Rules
  hr {
    clear                       : both;
    margin                      : $gutter 0;
    border-top                  : solid $colorBorder;
    border-width                : 1px 0 0;
    height                      : 0;
    &.hr--small {
      margin                    : ($gutter / 2) 0;
    }
    &.hr--clear {
      border-top-color          : transparent;
    }
  }

  // Section Headers
  .section-header {
    margin-bottom               : $gutter / 1.5;
  }
  @include at-query ($min, $large) {
    .section-header {
      display                   : table;
      width                     : 100%;
    }
    .section-header__title {
      margin-bottom             : $gutter / 2.5;
    }
    .section-header__left {
      display                   : table-cell;
      margin-bottom             : 0;
      vertical-align            : middle;
      h1,
      h2,
      h3,
      h4,
      .h1,
      .h2,
      .h3,
      .h4 {
        margin-bottom           : 0;
      }
    }
    .section-header__right {
      display                   : table-cell;
      width                     : 335px;
      text-align                : right;
      vertical-align            : middle;
      @include at-query ($max, $medium) {
        margin-bottom           : $gutter;
      }
    }
  }
  .section-header__right {
    .form-horizontal,
    .collection-view {
      display                   : inline-block;
      vertical-align            : middle;
    }
    @include at-query ($min, $postSmall) {
      label + select,
      .collection-view {
        margin-left             : $gutter / 2;
      }
    }
  }
  .collection-view {
    display                     : none !important;              // Was inline-block
    overflow                    : hidden;
    border                      : 1px solid $colorBorder;
    border-radius               : $radius;
    padding                     : 0 5px;
    height                      : 37px; // same as form elements
    @include at-query ($min, $large) {
      display                   : none !important;              // Was inline-block
    }
  }
  .change-view {
    display                     : block;
    float                       : left;
    border                      : 0 none;
    padding                     : 10px 8px;
    line-height                 : 1;
    color                       : $colorBorder;
    background                  : none;
    &:hover,
    &:focus {
      color                     : $colorPrimary;
    }
  }
  .change-view--active {
    color                       : $colorPrimary;
    cursor                      : default;
  }

  // #OOCSS Media Object
  // - http://www.stubbornella.org/content/2010/06/25/the-media-object-saves-hundreds-of-lines-of-code/
  .media,
  .media-flex {
    overflow                    : hidden;
    _overflow                   : visible;
    zoom                        : 1;
  }
  .media-img {
    float                       : left;
    margin-right                : $gutter;
  }
  .media-img-right {
    float                       : right;
    margin-left                 : $gutter;
  }
  .media-img img,
  .media-img-right img {
    display                     : block;
  }

  // Images and Iframes
  img,
  iframe {
    max-width                   : 100%;
  }
  img {
    border                      : 0 none;
  }
  svg:not(:root) {
    overflow: hidden;
  }
  .video-wrapper {
    position                    : relative;
    overflow                    : hidden;
    padding-bottom              : 56.25%;
    max-width                   : 100%;
    height                      : 0;
    height                      : auto;
    iframe {
      position                  : absolute;
      top                       : 0;
      left                      : 0;
      width                     : 100%;
      height                    : 100%;
    }
  }

  // New
  .logotype {
    img {
      max-width                 : 303px;
    }
  }

//----------------------------------------------------------------------------------------------
// ADMIN INTERFACE
//----------------------------------------------------------------------------------------------

  // Rich Text Editor
  .rte {
    margin-bottom               : $gutter / 2;
    a {
      text-decoration           : none;                         // Was underline
    }
    // Add some top margin to headers from the rich text editor
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin-top                : 1em;
      &:first-child {
        margin-top: 0;
      }
      a {
        text-decoration         : none;
      }
    }
    > div {
      margin-bottom             : $gutter / 2;
    }
    li {
      margin-bottom             : 0.4em;
    }
  }
  .rte--header {
    margin-bottom               : 0;
  }

//----------------------------------------------------------------------------------------------
// LINKS
//----------------------------------------------------------------------------------------------
  a,
  .text-link {
    color                       : $colorLink;
    text-decoration             : none;
    background                  : transparent;
  }
  a:hover,
  a:focus,
  a:active {
    color                       : $colorLinkHover;
  }
  .text-link {
    &:hover,
    &:focus,
    &:active {
      color                     : $colorLinkHover;
    }
  }

//----------------------------------------------------------------------------------------------
// BUTTONS
//----------------------------------------------------------------------------------------------
  button {
    overflow                    : visible;
  }
  button[disabled],
  html input[disabled] {
    cursor                      : default;
  }
  .btn,
  .rte .btn {
    @include user-select(none);
    display                     : inline-block;
    margin                      : 0;
    border                      : 1px solid transparent;
    border-radius               : $radius;
    padding                     : 8px 10px;
    width                       : auto;                         // New
    min-width                   : 128px;                        // New
    font-family                 : $interfaceFontStack;          // New
    line-height                 : 1.42;
    font-weight                 : 700;
    color                       : $colorBtnPrimaryText;
    text-transform              : uppercase;                    // New
    text-decoration             : none;
    text-align                  : center;
    vertical-align              : middle;
    white-space                 : nowrap;
    background-color            : $colorBtnPrimary;
    cursor                      : pointer;
    -webkit-appearance          : none;
    -moz-appearance             : none;
    &:hover {
      color                     : $colorBtnPrimaryText;
      background-color          : $colorBtnPrimaryHover;
    }
    &:active,
    &:focus {
     color                      : $colorBtnPrimaryText;
     background-color           : $colorBtnPrimaryActive;
    }
    &[disabled],
    &.disabled {
      cursor: default;
      color: $disabledBorder;
      background-color: $disabledGrey;
    }
  }
  .btn--secondary,
  .rte .btn--secondary {
    @extend .btn;
    background-color            : $colorBtnSecondary;
    &:hover {
      color                     : $colorBtnSecondaryText;
      background-color          : $colorBtnSecondaryHover;
    }
    &:active,
    &:focus {
     color                      : $colorBtnSecondaryText;
     background-color           : $colorBtnSecondaryActive;
    }
  }
  .btn--small {
    padding                     : 4px 5px;
    font-size                   : em(12px);
  }
  .btn--large {
    padding                     : 12px 15px;
    font-size                   : em(16px);
  }
  .btn--full {
    width                       : 100%;
  }

  // Force an input/button to look like a text link
  .text-link {
    display                     : inline;
    margin                      : 0;
    border                      : 0 none;
    padding                     : 0;
    background                  : none;
  }

//----------------------------------------------------------------------------------------------
// LISTS
//----------------------------------------------------------------------------------------------
  ul, ol {
    margin                      : 0 0 ($gutter / 2) 20px;
    padding                     : 0;
  }
  ol {
    list-style                  : decimal;
  }
  ul ul,
  ul ol,
  ol ol,
  ol ul {
    margin                      : 4px 0 5px 20px;
  }
  li {
    margin-bottom               : 0.25em;
  }
  ul.square {
    list-style                  : square outside;
  }
  ul.disc {
    list-style                  : disc outside;
  }
  ol.alpha {
    list-style                  : lower-alpha outside;
  }
  .no-bullets {
    list-style                  : none outside;
    margin-left                 : 0;
  }
  .inline-list {
    margin-left                 : 0;
    li {
      display                   : inline-block;
      margin-bottom             : 0;
    }
  }

//----------------------------------------------------------------------------------------------
// TABLES
//----------------------------------------------------------------------------------------------
  table {
    border-collapse             : collapse;
    border-spacing              : 0;
    width                       : 100%;
  }
  table.full {
    margin-bottom               : 1em;
    width                       : 100%;
  }
  .table-wrap {
    overflow                    : auto;
    -webkit-overflow-scrolling  : touch;
    max-width                   : 100%;
  }
  th {
    font-weight                 : bold;
  }
  th, td {
    text-align                  : left;
    padding                     : $gutter / 2;
    border                      : 1px solid $colorBorder;
  }

  // Responsive tables, defined with .table--responsive on table element.
  // Only defined for IE9+
  .table--responsive {
    @include at-query($max, $preSmall) {                        // Was $max, $small
      thead {
        display                 : none;
      }
      tr {
        display                 : block;
      }
      // IE9 table layout fixes
      tr,
      td {
        float                   : left;
        clear                   : both;
        width                   : 100%;
      }
      th,
      td {
        display                 : block;
        padding                 : 15px;
        text-align              : right;
      }
      td:before {
        content                 : attr(data-label);
        display                 : inline-block;                 // New
        float                   : left;
        padding-right           : 0;                            // Was 10px
        width                   : 78.25%;                       // New
        font-size               : 12px;
        text-align              : right;                        // Was 'center'
      }
      &.cart-table {
        img {
          margin                : 0 auto;
        }
        .js-qty {
          float                 : right;
        }
      }
    }
  }
  @include at-query($max, $preSmall) {                          // Was $max, $small
    .table--small-hide {
      display                   : none !important;
    }
    .table__section + .table__section {
      position                  : relative;
      margin-top                : 10px;
      padding-top               : 15px;
      &:after {
        content                 : '';
        display                 : block;
        position                : absolute;
        top                     : 0;
        left                    : $gutter;                      // Was 15px
        right                   : $gutter;                      // Was 15px
        border-bottom           : 2px solid $colorAccent; // Was 2px $colorBorder;
      }
    }
  }

//----------------------------------------------------------------------------------------------
// PAGINATION
//----------------------------------------------------------------------------------------------
  .pagination {
    margin-bottom               : 1em;
    text-align                  : center;
    > span {
      display                   : inline-block;
      line-height               : 1;
    }
    a {
      display                   : block;
    }
    a,
    .page.current {
      padding                   : 8px;
    }
  }

//----------------------------------------------------------------------------------------------
// SEARCH BAR
//----------------------------------------------------------------------------------------------
// NOTE: New, in part - reorganized common treatments to outside site header definitions
//----------------------------------------------------------------------------------------------
  .search-bar {
    max-width                   : 100%;
    @include at-query ($max, $medium) {
      margin-left               : auto;
      margin-right              : auto;
    }

    // New
    input[type="search"] {
      margin-right              : 0;
      border-width              : 0 0 1px 0;
      border-color              : $colorPrimary;
      padding                   : 0 2px;
      width                     : auto;
      min-width                 : 140px;
      height                    : 24px;
      font-size                 : em(12px);
      background-color          : transparent;
    }
    ::-webkit-input-placeholder {
      color                     : $colorAccent;
    }
    :-moz-placeholder {
      color                     : $colorAccent;
    }
    ::-moz-placeholder {
      color                     : $colorAccent;
    }
    :-ms-input-placeholder {
      color                     : $colorAccent;
    }
    .input-group-btn {
      padding-left              : 0;
      width                     : auto;
    }
    button[type="submit"],
    button.btn {
      padding                     : 0;
      width                       : 22px;
      min-width                   : auto;
      height                      : 21px;
      background                  : transparent url({{'Icon.Search.png' | asset_url }}) no-repeat 100% 0;
      background-size             : 21px 21px;
    }
    .icon-search {
      display                     : none !important;
    }

  }

//----------------------------------------------------------------------------------------------
// PRIMARY CONTENT AREA
//----------------------------------------------------------------------------------------------
  div.page-container {
    background-color            : $colorAccent;
  }

//----------------------------------------------------------------------------------------------
// SITE HEADER
//----------------------------------------------------------------------------------------------
// NOTE: Structural definitions (positioning, grid, etc.) for *overall* site header moved to
// _layout.scss.liquid.
//----------------------------------------------------------------------------------------------
  .site-header {
    background-color            : $colorAccent2;                // New

    // Social Icons (New)
    .social-icons {
      margin                    : 0;
      .icon {
        font-size               : em(16px);
        color                   : {{ settings.color_header_social_link }};
      }
    }

  }

  .site-header__logo {
    text-align                  : center;
    margin                      : 0 auto;
    max-width                   : 100%;
    @include at-query ($min, $large) {
      text-align                : left;
    }
    a,
    a:hover,
    a:focus {
      text-decoration           : none;
    }
    a, img {
      display                   : block;
    }
    img {
      margin                    : 0 auto;
    }
  }
  .site-header__logo-link {
    max-width                   : $logoMaxWidth;
    margin                      : 0 auto;
  }

  .site-header__cart-toggle {
    display                     : inline-block;
  }

  .site-header__search {
    display                     : inline-block;
    max-width                   : 207px;                        // Was 400px
    margin-top                  : $gutter / 2;
    width                       : auto;                         // Was 100%

    // Expandable Search (New) - specific to large-screen site header
    form.search-bar {
      top                       : 1px;
      margin-bottom             : 0;
    }
    ::-webkit-input-placeholder {
      color                     : rgb(110, 110, 110);
    }
    :-moz-placeholder {
      color                     : rgb(110, 110, 110);
    }
    ::-moz-placeholder {
      color                     : rgb(110, 110, 110);
    }
    :-ms-input-placeholder {
      color                     : rgb(110, 110, 110);
    }
    input[type="search"] {
      margin-right              : 23px;
      padding                   : 0;
      width                     : 0;
      min-width                 : 0;
      -webkit-transition        : all .25s;
      -moz-transition           : all .25s;
      transition                : all .25s;
    }
    &:focus {
      input[type="search"] {
        padding                 : 0 2px;
        width                   : auto;
        min-width               : 140px;
      }
    }
    button[type="submit"],
    span.search-expander {
      display                   : block;
      position                  : absolute;
      top                       : 0;
      right                     : 0;
      cursor                    : pointer;
    }
    button[type="submit"] {
      z-index                   : 10px;
    }
    span.search-expander {
      z-index                   : 15;
      width                     : 22px;
      height                    : 23px;
    }
    .search-bar.expanded {
      input[type="search"] {
        width                   : 140px;
        min-width               : 140px;
        -webkit-transition      : all .25s;
        -moz-transition         : all .25s;
        transition              : all .25s;
      }
      button[type="submit"] {
        z-index                 : 15;
      }
      span.search-expander {
        z-index                 : 10;
      }
    }

  }

  // Ancillary Nav Links (New)
  .nav-ancillary {
    position                    : relative;
    bottom                      : 8px;
    margin-right                : 16px;
    padding-top                 : 8px;
    font-family                 : $interfaceFontStack;
    font-size                   : em(10px);
    font-weight                 : 600;
    color                       : rgb(12, 12, 12);              // #0C0C0C
    text-transform              : uppercase;
    a {
      color                     : rgb(12, 12, 12);
    }
    .site-header__cart-toggle {
      margin-right              : -4px;
    }
  }

  // Cart (New - main and mobile)
  .nav-ancillary span.cart,
  .mobile-nav__item.menu-cart span.cart {
    display                     : inline-block;
    position                    : relative;
    padding                     : 15px 0 7px 28px;
    line-height                 : 100%;
    background-repeat           : no-repeat;
    background-position         : 0 0;
    background-size             : contain;
    &.full {
      span.cart-count,
      span.title {
        display                 : inline-block;
        position                : relative;
      }
      span.cart-count {
        position                : absolute;
        top                     : 20px;
        left                    : 0;
        width                   : 29px;
        height                  : 13px;
        font-size               : 12px;
        font-weight             : $headerFontWeight;
        text-align              : center;
      }
    }
  }
  .nav-ancillary span.cart {
    top                         : -5px;
    &.empty {
      background-image          : url({{ 'Icon.Basket.Empty.png' | asset_url }});
    }
    &.full {
      background-image          : url({{ 'Icon.Basket.Items.png' | asset_url }});
    }
    span.cart-count {
      color                     : $colorBody;
    }
  }
  .mobile-nav__item.menu-cart span.cart {
    padding-left                : 34px;
    &.empty {
      background-image          : url({{ 'Icon.Basket.Empty.Mobile.png' | asset_url }});
    }
    &.full {
      background-image          : url({{ 'Icon.Basket.Items.Mobile.png' | asset_url }});
    }
    span.cart-count {
      color                     : rgb(45, 45, 45);
    }
    span.title {
      top                       : 2px;
    }
  }


//==============================================================================================
// VARIABLES
//----------------------------------------------------------------------------------------------
// Primary customization point for making expected modifications to the site.
//----------------------------------------------------------------------------------------------
// NOTE: Unless otherwise specified (e.g., with "// New", or "// Was [property value]"), styles
// are OOTB Timber definitions; only formatting and property organization have been altered.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// COLORS
//----------------------------------------------------------------------------------------------

  // Timber / Theme
  $colorPrimary                 : {{ settings.color_primary }};
  $colorSecondary               : {{ settings.color_secondary }};

  // Helpers / Interface
  $disabledGrey                 : #f6f6f6;
  $disabledBorder               : darken($disabledGrey, 25%);
  $errorRed                     : #d02e2e;
  $errorRedBg                   : #fff6f6;
  $successGreen                 : #56ad6a;
  $successGreenBg               : #ecfef0;

  // Backgrounds
  $colorBody                    : {{ settings.color_body_bg }};
  $colorAccent                  : {{ settings.color_body_bg_accent }};  // New
  $colorAccent2                 : lighten($colorAccent, 1%);    // New

  // Text
  $colorTextBody                : {{ settings.color_body_text }};

  // Links colors
  $colorLinkText                : {{ settings.color_text_link }};       // New
  $colorLink                    : $colorLinkText;               // Was $colorPrimary
  $colorLinkHover               : $colorPrimary;                // Was lighten($colorPrimary, 15%)

  // Buttons
  $colorBtnPrimary              : $colorPrimary;
  $colorBtnPrimaryHover         : darken($colorBtnPrimary, 10%);
  $colorBtnPrimaryActive        : darken($colorBtnPrimaryHover, 10%);
  $colorBtnPrimaryText          : #fff;

  $colorBtnSecondary            : $colorSecondary;
  $colorBtnSecondaryHover       : lighten($colorBtnSecondary, 15%);     // Was darken($colorBtnSecondary, 10%)
  $colorBtnSecondaryActive      : lighten($colorBtnSecondaryHover, 10%);// Was darken($colorBtnSecondaryHover, 10%);
  $colorBtnSecondaryText        : #fff;

  // Borders
  $colorBorder                  : {{ settings.color_borders }};

  // Nav and dropdown link background
  $colorNav                     : $colorAccent;                 // Was #f2f2f2 (hard-coded)
  $colorNavText                 : #333;

  // Site Footer
  $colorFooterBg                : {{ settings.color_footer_bg }};
  $colorFooterText              : {{ settings.color_footer_text }};

//----------------------------------------------------------------------------------------------
// BREAKPOINT/GRID
//----------------------------------------------------------------------------------------------
  $viewportIncrement            : 1px;

  $narrow                       : 320px;
  $small                        : 480px;
  $medium                       : 768px;
  $large                        : 960px;

  $preSmall                     : $small - $viewportIncrement;
  $postSmall                    : $small + $viewportIncrement;
  $preMedium                    : $medium - $viewportIncrement;
  $postMedium                   : $small + $viewportIncrement;
  $preLarge                     : $large - $viewportIncrement;

  // The following are dependencies of csswizardry grid
  $breakpoints: (
    'small' '(min-width: #{$small})',
    'small-medium' '(min-width: #{$postSmall}) and (max-width: #{$preMedium})',
    'medium' '(min-width: #{$medium})',
    'medium-down' '(max-width: #{$preMedium})',
    'medium-large' '(min-width: #{$postMedium}) and (max-width: #{$preLarge})',
    'large' '(min-width: #{$large})',
    'large-down' '(max-width: #{$preLarge})'
  );
  $breakpoint-has-widths: ('small', 'medium', 'medium-down', 'large', 'large-down');  // New - large-down
  $breakpoint-has-push:  ('small', 'medium', 'medium-down', 'large', 'large-down');   // New - small, large-down
  $breakpoint-has-pull:  ('small', 'medium', 'medium-down', 'large', 'large-down');   // New - small, large-down

//----------------------------------------------------------------------------------------------
// BASE/GENERAL
//----------------------------------------------------------------------------------------------

  // Logo max width
  $logoMaxWidth                 : {{ settings.logo_max_width | default: '450' | remove: 'px' }}px;

  // Typography
  $bodyFontStack                : 'Cabin Regular', 'Open Sans', 'HelveticaNeue', 'Helvetica Neue', {{ settings.type_base_family }};  // New - Cabin, Open Sans
  // Henceforth known as 1em
  $baseFontSize                 : {{ settings.type_base_size }}px;
  $headerFontStack              : 'Prompt', $bodyFontStack;     // New - Prompt + $bodyFontStack
  $headerFontWeight             : 800;
  $interfaceFontStack           : 'Open Sans', 'Cabin Regular', 'HelveticaNeue', 'Helvetica Neue', {{ settings.type_base_family }};  // New
  $socialIconFontStack          : 'icons';

//----------------------------------------------------------------------------------------------
// COMPONENTS
//----------------------------------------------------------------------------------------------

  // Drawers
  $drawerNavWidth               : 300px;
  $drawerCartWidth              : 300px;
  $colorDrawers                 : $colorAccent2;                // Was #f6f6f6
  $colorDrawerBorder            : darken($colorDrawers, 5%);
  $colorDrawerText              : #333;
  $drawerTransition             : all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);

//----------------------------------------------------------------------------------------------
// LAYOUT
//----------------------------------------------------------------------------------------------

  // Sizing
  $siteWidth                    : 1280px;                       // Was 1180px
  $gutter                       : 10px;                         // Was 30px (also for $gridGutter)
  // can be a %, but nested grids will have smaller margins because of it
  $gridGutter                   : 10px;
  $radius                       : 0;                            // Was 3px

  // Z-index
  $zindexNavDropdowns           : 5;
  $zindexDrawer                 : 10;

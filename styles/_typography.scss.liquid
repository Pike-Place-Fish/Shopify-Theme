//==============================================================================================
// TYPOGRAPHY
//----------------------------------------------------------------------------------------------
// Overrides type-related settings such as default fonts, headings, and common text-related
// styles, such as .error.
//==============================================================================================

//----------------------------------------------------------------------------------------------
// DEFAULTS
//----------------------------------------------------------------------------------------------
  body,
  input,
  textarea,
  button,
  select {
    font-family                 : $bodyFontStack;
    font-size                   : $baseFontSize;
    line-height                 : 1.6;
    font-weight                 : 300;
    color                       : $colorTextBody;
    -webkit-font-smoothing      : antialiased;
    -webkit-text-size-adjust    : 100%;
  }

  p {
    margin                      : 0 0 ($gutter / 2) 0;

    img {
      margin                    : 0;
    }
  }

  em {
    font-style                  : italic;
  }

  b,
  strong {
    font-weight                 : bold;
  }

  small {
    font-size                   : 0.9em;
  }

  sup,
  sub {
    position                    : relative;
    vertical-align              : baseline;
    font-size                   : 60%;
  }
  sup {
    top                         : -0.5em;
  }
  sub {
    bottom                      : -0.5em;
  }

//----------------------------------------------------------------------------------------------
// HEADINGS
//----------------------------------------------------------------------------------------------
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    display                     : block;
    margin                      : 0 0 0.5em;
    font-family                 : $headerFontStack;
    line-height                 : 1.4;
    font-weight                 : $headerFontWeight;

    a {
      text-decoration           : none;
      font-weight               : inherit;
    }
  }

  // New
  h1,
  h2 {
    text-transform              : uppercase;
  }

  // Note: headings use em() Sass function to declare font-size
  h1 {
    font-size                   : em(36px);
  }

  h2 {
    font-size                   : em(28px);
  }

  h3 {
    font-size                   : em(22px);
  }

  h4 {
    font-size                   : em(18px);                     // Was em(20px)
  }

  h5 {
    font-size                   : em(16px);
  }

  h6 {
    font-size                   : em(14px);
  }

  .h1 { @extend h1; }
  .h2 { @extend h2; }
  .h3 { @extend h3; }
  .h4 { @extend h4; }
  .h5 { @extend h5; }
  .h6 { @extend h6; }

  // Special heading treatments
  .logotype {
    color                       : $colorLink;
    letter-spacing              : em(2px);
    -webkit-text-stroke-width   : 1px;
    -webkit-text-stroke-color   : {{ settings.color_secondary }};
  }
